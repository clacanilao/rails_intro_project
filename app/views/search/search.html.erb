<body class="main">
  <% if params[:keywords].present? %>
    <p class="mb-5">
      Found <%=pluralize(@results.count, "Result")%> for: <%= params[:keywords]%>
    </p>
  <% else %>
    <p class="mb-5">
      Found <%=pluralize(@results.count, "Result")%> for <%= params[:category].capitalize %>
    </p>
  <% end %>
  <ul>
    <% @results.each do |r| %>
    <li>
      <%= link_to r.name, r %>
    </li>
    <% end %>
  </ul>
</body>