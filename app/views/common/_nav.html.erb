<nav class="navbar navbar-expand-lg">
  <%= link_to "SpaceX Launches", root_path, class: "navbar-brand"%>
  <button class="navbar-toggler outlined" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Launches", launches_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Rockets", rockets_path, class: "nav-link" %>
